<!--filter_domain = ['|',('responsible_id','ilike', 'admin'), ('name','ilike','cour')]-->

		<record model="ir.ui.view" id="view_holiday_planning_form">
			<field name="name">holiday.planning.form</field>
			<field name="model">holiday.planning</field>
			<field name="arch" type="xml">
				<form string="Day-off Planning">
					<header>
						<!--Button-->
					</header>
					<sheet>
						<group>
							<group>
								<field name="name"/>
								<field name="DefaultType"/>
                                <group>
                                    <field name="GlobalStartPeriod"/>
                                    <field name="GlobalEndPeriod"/>
                                </group>
								
							</group>
							<group>
								<field name="Mode"/>
                                
                                <field name="EmployeeName" attrs="{'invisible':[('Mode','=','tag')]}"/>
                                <field name="EmployeeTag" attrs="{ 'invisible':[('Mode','=','employee')]}"/>

								<field name="Company"/>
							</group>
						</group>
						
					</sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" 
                    	groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
				</form>
			</field>
        </record>

		<record model="ir.ui.view" id="view_holiday_planning_tree">
			<field name="name">holiday.planning.tree</field>
			<field name="model">holiday.planning</field>
            <field name="arch" type="xml">
                <tree string="Day-off Planning">
                    <field name="name"/>
                    <field name="DefaultType"/>
                    <field name="Mode"/>
                    <field name="GlobalStartPeriod" string="Start Date"/>
                    <field name="GlobalEndPeriod" string="End Date"/>
                    <field name="Company"/>
                </tree>
            </field>
        </record>
		<!--  Action -->
		<record model="ir.actions.act_window" id="action_holiday_planning">
			<field name="name">Day-off Planning</field>
			<field name="res_model">holiday.planning</field>
			<field name="view_type">tree</field>
			<field name="view_mode">form,tree</field>
		</record>
        <menuitem id="menu_holiday_planning" name="Day-off Planning" parent="hr_holidays.menu_open_ask_holidays" action="action_holiday_planning"/>


	</data>
</openerp>

